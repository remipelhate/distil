<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php" colors="true">
    <testsuites>
        <testsuite name="Distil">
            <directory suffix="Test.php">src/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./src/</directory>
            <exclude>
                <directory suffix="Test.php">src/</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
